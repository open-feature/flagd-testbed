{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>open-feature/community-tooling"
  ],
  "semanticCommitType": "feat",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "ghcr\\.io\\/open-feature\\/flagd:(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "open-feature/flagd",
      "datasourceTemplate": "github-releases"
    }
  ]
}
